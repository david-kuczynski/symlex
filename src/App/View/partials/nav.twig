<div class="navbar navbar-inverse navbar-fixed-top" id="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">{{ app_name }}</a>
        </div>
        <div class="navbar-collapse collapse">
            {% if user_id %}
            <ul class="nav navbar-nav">
                {% if is_admin %}
                <li><a href="#users">Users</a></li>
                {% endif %}
                <li><a href="#profile">Profile</a></li>
            </ul>
            <form id="logout" class="navbar-form login-form navbar-right" method="get" action="/session/logout">
                <button type="submit" class="btn btn-success">Logout {{ firstname }}</button>
            </form>
            {% else %}
            <form id="login" class="navbar-form login-form navbar-right" method="post" action="/session/login">
                <div class="form-group">
                    <input type="text" placeholder="Email" class="form-control" name="email" required="">
                </div>
                <div class="form-group">
                    <input type="password" placeholder="Password" class="form-control" name="password" required="">
                </div>
                <button type="submit" class="btn btn-success">Sign in</button>
            </form>
            {% endif %}
        </div><!--/.navbar-collapse -->
    </div>
</div>