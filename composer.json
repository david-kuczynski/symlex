{
    "name": "lastzero/symlex",
    "type": "project",
    "description": "Silex with Symfony DI Container: A framework for rapid development of high-performance REST services & apps",
    "keywords": [
        "silex",
        "symfony",
        "dependency injection",
        "performance",
        "micro-framework",
        "rest"
    ],
    "homepage": "https://github.com/lastzero/symlex",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Mayer",
            "email": "michael@lastzero.net",
            "homepage": "https://lastzero.net/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.0",
        "silex/silex": "~1.2",
        "symfony/symfony": "^2.8|^3.0",
        "lastzero/symlex-core": "~1.1",
        "doctrine/dbal": "~2.5",
        "doctrine/migrations": "~1.1",
        "lastzero/doctrine-active-record": "~2.0",
        "lastzero/php-input-validation": "~2.0",
        "monolog/monolog": "1.*",
        "swiftmailer/swiftmailer": "5.*",
        "incenteev/composer-parameter-handler": "~2.0",
        "sensiolabs/security-checker": "*",
        "phing/phing": "^2.15"
    },
    "require-dev": {
        "lastzero/test-tools": "^3.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
      "bin-dir": "bin/"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "php bin/security-checker security:check --format=simple",
            "app/clearcache",
            "composer dumpautoload -o"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "php bin/security-checker security:check --format=simple",
            "app/clearcache",
            "composer dumpautoload -o"
        ]
    },
    "extra": {
        "incenteev-parameters": {
            "file": "app/config/parameters.yml",
            "dist-file": "app/config/parameters.dist.yml"
        }
    }
}