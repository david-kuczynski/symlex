{
  "name": "lastzero/symlex",
  "description": "Silex with Symfony DI Container",
  "keywords": [
    "silex",
    "symfony",
    "dependency injection",
    "performance",
    "micro-framework"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Michael Mayer",
      "email": "michael@lastzero.net",
      "homepage": "https://lastzero.net/",
      "role": "Developer"
    }
  ],
  "type": "project",
  "require": {
    "silex/silex": "~1.3",
    "symfony/symfony": "~2.8",
    "lastzero/symlex-core": "*",
    "lastzero/doctrine-active-record": "1.0.*",
    "lastzero/php-input-validation": "1.0.*",
    "doctrine/dbal": "~2.5",
    "monolog/monolog": "1.*",
    "doctrine/migrations": "1.0.*@dev",
    "swiftmailer/swiftmailer": "5.*",
    "incenteev/composer-parameter-handler": "~2.0"
  },
  "require-dev": {
    "lastzero/test-tools": "*",
    "phpunit/phpunit": "~4.8",
    "sstalle/php7cc": "*"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-0": {
      "": "src/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
    ],
    "post-update-cmd": [
      "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
    ]
  },
  "extra": {
    "incenteev-parameters": {
      "file": "app/config/parameters.yml",
      "dist-file": "app/config/parameters.dist.yml"
    }
  }
}
